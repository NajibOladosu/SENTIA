{{ 'stitch-theme.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="stitch-features-grid w-full relative z-10 section-{{ section.id }}-padding bg-background reveal">
  <div class="layout-content-container max-w-[1440px] w-full px-6 mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
       {%- for block in section.blocks -%}
          {% case block.type %}
            {% when 'feature_large' %}
                <div class="col-span-1 md:col-span-12 lg:col-span-6 bg-surface border border-white/5 rounded-3xl p-8 md:p-12 flex flex-col justify-between min-h-[400px] hover:border-white/10 hover:shadow-premium transition-premium group" {{ block.shopify_attributes }}>
                    <div>
                        <div class="w-16 h-16 rounded-2xl bg-primary/10 flex items-center justify-center mb-8 text-primary shadow-glow-primary group-hover:scale-110 transition-premium">
                            <span class="material-symbols-outlined text-4xl">{{ block.settings.icon }}</span>
                        </div>
                        <h2 class="text-3xl font-bold tracking-tight mb-4 text-text-main">{{ block.settings.heading | newline_to_br }}</h2>
                        <p class="text-text-muted text-lg max-w-sm">{{ block.settings.text }}</p>
                    </div>
                    {% if block.settings.link_label != blank %}
                        <div class="mt-8">
                            <a class="text-primary font-semibold hover:text-text-main transition-premium inline-flex items-center gap-2 no-underline group" href="{{ block.settings.link_url }}">
                                {{ block.settings.link_label }}
                                <span class="material-symbols-outlined text-sm group-hover:translate-x-1 transition-premium">arrow_forward</span>
                            </a>
                        </div>
                    {% endif %}
                </div>

            {% when 'feature_small' %}
                <div class="col-span-1 md:col-span-6 lg:col-span-3 bg-surface border border-white/5 rounded-3xl p-8 flex flex-col gap-4 hover:bg-surface-highlight hover:shadow-premium transition-premium group" {{ block.shopify_attributes }}>
                    <span class="material-symbols-outlined text-3xl text-text-main group-hover:scale-110 transition-premium">{{ block.settings.icon }}</span>
                    <h3 class="text-xl font-bold text-text-main">{{ block.settings.heading }}</h3>
                    <p class="text-sm text-text-muted">{{ block.settings.text }}</p>
                </div>

            {% when 'feature_wide' %}
                <div class="col-span-1 md:col-span-12 bg-gradient-to-br from-[#0a2347] via-[#051021] to-black border border-blue-900/30 rounded-3xl p-8 md:p-12 flex flex-col md:flex-row items-center justify-between gap-8 relative overflow-hidden group shadow-premium" {{ block.shopify_attributes }}>
                    <div class="relative z-10 flex flex-col items-start gap-4">
                        <h2 class="text-3xl font-bold text-white">{{ block.settings.heading }}</h2>
                        <p class="text-blue-200/80 max-w-lg">{{ block.settings.text }}</p>
                        {% if block.settings.button_label != blank %}
                            <a href="{{ block.settings.button_link }}" class="mt-2 bg-primary text-white px-8 py-3 rounded-full font-bold text-sm hover:bg-primary-dark transition-premium shadow-glow-primary hover:scale-105 no-underline">{{ block.settings.button_label }}</a>
                        {% endif %}
                    </div>
                    <div class="relative z-10 hidden md:block">
                        <span class="material-symbols-outlined text-[120px] text-white/5 group-hover:scale-110 group-hover:text-white/10 transition-all duration-500">{{ block.settings.icon }}</span>
                    </div>
                    <div class="absolute -right-20 -bottom-40 w-96 h-96 bg-primary rounded-full blur-[100px] opacity-20 group-hover:opacity-30 transition-opacity duration-700"></div>
                </div>
          {% endcase %}
       {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Stitch Features Grid",
  "tag": "section",
  "class": "section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "feature_large",
      "name": "Large Feature (Half)",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (Material Symbols)",
          "default": "encrypted"
        },
        {
          "type": "textarea",
          "id": "heading",
          "label": "Heading",
          "default": "Privacy first.\nAlways."
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Local processing means your video footage never leaves your home."
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link Label",
          "default": "Read our privacy manifesto"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    },
    {
      "type": "feature_small",
      "name": "Small Feature (Quarter)",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (Material Symbols)",
          "default": "bolt"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "3-Year Battery"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Forget about charging. Our chip keeps you protected."
        }
      ]
    },
    {
      "type": "feature_wide",
      "name": "Wide Feature (Full)",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (Material Symbols)",
          "default": "support_agent"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "24/7 Professional Monitoring"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Get peace of mind with our optional subscription."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Start Free Trial"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stitch Features Grid",
      "blocks": [
        {
          "type": "feature_large"
        },
        {
          "type": "feature_small"
        },
        {
          "type": "feature_small"
        },
        {
          "type": "feature_wide"
        }
      ]
    }
  ]
}
{% endschema %}
