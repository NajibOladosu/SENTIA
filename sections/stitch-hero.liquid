{{ 'stitch-theme.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="stitch-hero relative w-full py-20 md:py-32 flex flex-col items-center justify-center overflow-hidden z-10 section-{{ section.id }}-padding bg-background text-text-main reveal active">
  <!-- Background Elements -->
  <div class="fixed inset-0 w-full h-full pointer-events-none z-0">
     {% if section.settings.show_background_blobs %}
        <div class="absolute top-[-10%] left-[-10%] w-[60%] h-[60%] bg-blue-600/10 blur-[150px] rounded-full mix-blend-screen animate-pulse" style="animation-duration: 15s;"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] bg-purple-600/10 blur-[150px] rounded-full mix-blend-screen animate-pulse" style="animation-duration: 12s;"></div>
     {% endif %}
  </div>

  <div class="layout-content-container max-w-[1440px] w-full px-6 flex flex-col md:flex-row items-center gap-12 md:gap-20 z-10">
    <!-- Text Content -->
    <div class="flex-1 flex flex-col items-start gap-8 z-10 animate-fade-in">
        {%- if section.settings.badge_text != blank -%}
          <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-white/5 border border-white/10 text-primary text-xs font-semibold tracking-wide uppercase backdrop-blur-sm">
            <span class="w-1.5 h-1.5 rounded-full bg-primary shadow-[0_0_8px_rgba(41,151,255,0.8)]"></span>
            {{ section.settings.badge_text }}
          </div>
        {%- endif -%}

        <h1 class="text-5xl md:text-8xl font-bold leading-[1.0] tracking-tighter text-text-main">
            {{ section.settings.heading_line_1 }} <br/>
            <span class="text-transparent bg-clip-text bg-gradient-to-br from-primary via-blue-400 to-white animate-fade-in" style="animation-delay: 0.2s;">
              {{ section.settings.heading_highlight }}
            </span>
        </h1>

        <p class="text-xl md:text-2xl font-light text-text-muted max-w-[500px] leading-relaxed">
            {{ section.settings.description }}
        </p>

        <div class="flex flex-col sm:flex-row gap-5 mt-4 w-full sm:w-auto">
            {%- if section.settings.button_1_label != blank -%}
              <a href="{{ section.settings.button_1_link }}" class="flex h-12 px-8 items-center justify-center rounded-full bg-primary text-white text-base font-medium hover:bg-primary-dark hover:scale-105 transition-all duration-300 shadow-[0_0_20px_rgba(41,151,255,0.4)] no-underline">
                  {{ section.settings.button_1_label }} 
                  {% if section.settings.button_1_price != blank %}
                    <span class="mx-2 text-white/60">â€¢</span> {{ section.settings.button_1_price }}
                  {% endif %}
              </a>
            {%- endif -%}

            {%- if section.settings.button_2_label != blank -%}
              <a href="{{ section.settings.button_2_link }}" class="flex h-12 px-8 items-center justify-center rounded-full bg-white/5 text-text-main border border-white/10 hover:bg-white/10 hover:border-white/30 text-base font-medium transition-premium group backdrop-blur-md no-underline">
                  {{ section.settings.button_2_label }} 
                  <span class="material-symbols-outlined ml-1 group-hover:translate-x-1 transition-premium text-sm">arrow_forward_ios</span>
              </a>
            {%- endif -%}
        </div>
    </div>

    <!-- Visual Content -->
    <div class="flex-1 w-full relative group perspective-1000 animate-float">
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[90%] h-[90%] bg-primary/20 blur-[80px] rounded-full"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[100%] h-[100%] bg-blue-600/10 blur-[100px] rounded-full mix-blend-screen"></div>
        
        <div class="relative w-full aspect-square md:aspect-[4/3] rounded-3xl overflow-hidden shadow-premium ring-1 ring-white/10 transition-premium hover:scale-[1.03] hover:ring-white/20">
            {%- if section.settings.image != blank -%}
              {{ section.settings.image | image_url: width: 1200 | image_tag: 
                class: 'w-full h-full object-cover transition-premium group-hover:scale-110',
                loading: 'eager',
                widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                alt: section.settings.image.alt | escape
              }}
            {%- else -%}
               <div class="w-full h-full bg-surface-highlight flex items-center justify-center text-text-muted">
                  {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full opacity-30 transition-premium group-hover:scale-110' }}
               </div>
            {%- endif -%}
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-60"></div>
        </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Stitch Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
       "type": "text",
       "id": "badge_text",
       "label": "Badge Text",
       "default": "New Release"
    },
    {
      "type": "text",
      "id": "heading_line_1",
      "label": "Heading Line 1",
      "default": "Security,"
    },
    {
      "type": "text",
      "id": "heading_highlight",
      "label": "Heading Highlight",
      "default": "Redefined."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Experience the next generation of smart protection. Seamlessly integrated, beautifully designed."
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "button_1_label",
      "label": "Button 1 Label",
      "default": "Buy Now"
    },
    {
        "type": "text",
        "id": "button_1_price",
        "label": "Button 1 Price (Optional)",
        "default": "$299"
      },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "button_2_label",
      "label": "Button 2 Label",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Button 2 Link"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
        "type": "checkbox",
        "id": "show_background_blobs",
        "label": "Show Background Blobs",
        "default": true
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Stitch Hero"
    }
  ]
}
{% endschema %}
